    <Grid Background="Bisque">
        <Label Content="Overzicht persoonsgegevens" FontSize="25" HorizontalAlignment="Center"></Label>
        <StackPanel HorizontalAlignment="Left">
            <Image Source="/Images/tiktok.png" Width="100" Margin="40"></Image>
        </StackPanel>
        <StackPanel Orientation="Vertical" Width="200" Height="300">
           
            <Label Content="Voornaam: " Grid.Column="0" Grid.Row="0"></Label>
            <TextBox x:Name="Voornaam" Grid.Column="1" Grid.Row="0"></TextBox>
            <StackPanel Orientation="Vertical">
                <Label Content="Achternaam: " Grid.Column="1" Grid.Row="1" ></Label>
                <TextBox x:Name="Achternaam" Grid.Column="1" Grid.Row="1" ></TextBox>
            </StackPanel>
            <Label Content="Straat: "></Label>
            <TextBox x:Name="Straat"></TextBox>
            <Label Content="Woonplaats: "></Label>
            <TextBox x:Name="Woonplaats"></TextBox>
            <Label Content="Leeftijd: "></Label>
            <TextBox x:Name="Leeftijd"></TextBox>
            <Label Content="Geslacht: "></Label>
            <TextBox x:Name="Geslacht"></TextBox>
        </StackPanel>
    </Grid>
</Window>
